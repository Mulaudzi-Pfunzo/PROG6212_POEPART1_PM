@model CMCS.Models.HrPaymentRecord
@{
    ViewData["Title"] = "Payment Invoice";
    var claim = ViewBag.Claim as CMCS.Models.Claim;
    var lecturer = ViewBag.Lecturer as CMCS.Models.Lecturer;
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <div>
                <h5 class="mb-0">Payment Invoice</h5>
                <small>Payment Record #: @Model.PaymentRecordID</small>
            </div>
            <div class="text-end">
                <small>Paid: @Model.PaidDate.ToString("yyyy-MM-dd HH:mm")</small>
                <br />
                <small>Ref: @Model.PaymentReference</small>
            </div>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h6 class="fw-bold">Payee (Lecturer)</h6>
                    @if (lecturer != null)
                    {
                        <p class="mb-0">@lecturer.FirstName @lecturer.LastName</p>
                        <p class="mb-0">@lecturer.Email</p>
                        <p class="mb-0">Staff #: @lecturer.StaffNumber</p>
                    }
                </div>
                <div class="col-md-6 text-end">
                    <h6 class="fw-bold">Invoice For</h6>
                    <p class="mb-0">Claim ID: @claim?.ClaimID</p>
                    <p class="mb-0">Submitted: @claim?.ClaimDate.ToShortDateString()</p>
                </div>
            </div>

            <table class="table">
                <thead>
                    <tr class="table-light">
                        <th>Description</th>
                        <th class="text-end">Amount (R)</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Hours @claim?.HoursWorked × Rate R @claim?.HourlyRate.ToString("0.00")</td>
                        <td class="text-end">R @Model.Amount.ToString("0.00")</td>
                    </tr>
                    <tr>
                        <td><strong>Total</strong></td>
                        <td class="text-end"><strong>R @Model.Amount.ToString("0.00")</strong></td>
                    </tr>
                </tbody>
            </table>

            <div class="mt-4 d-flex justify-content-between">
                <div>
                    <small class="text-muted">Generated by CMCS - Contract Monthly Claim System</small>
                </div>
                <div>
                    <a class="btn btn-outline-secondary me-2" onclick="window.print();"><i class="bi bi-printer"></i> Print</a>
                    <a asp-action="Dashboard" asp-controller="HR" class="btn btn-primary">Back to Dashboard</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card-header small {
        display: block;
    }
</style>
