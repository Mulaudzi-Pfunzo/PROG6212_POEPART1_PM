@* Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMCS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CMCS.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    <style>
        .toast-container {
            position: fixed;
            top: 1rem;
            right: 1rem;
            z-index: 1080;
        }

        .toast {
            min-width: 280px;
            font-size: 0.95rem;
        }

        .toast-header strong {
            font-size: 1rem;
        }

        .gradient-navbar {
            background: linear-gradient(90deg, #0d6efd 0%, #0056b3 100%);
        }

        .wave-divider svg {
            display: block;
            width: 100%;
            height: 60px;
        }

        .footer-modern {
            background: #f5f7fa;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark gradient-navbar shadow-sm">
            <div class="container-fluid">
                <!-- Brand -->
                <a class="navbar-brand fw-bold text-white glow" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-mortarboard"></i> CMCS
                </a>

                <!-- Toggle -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Links -->
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <!-- Lecturer -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="lecturerDropdown"
                               role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-workspace"></i> Lecturer
                            </a>
                            <ul class="dropdown-menu shadow-lg rounded-3 animate__animated animate__fadeIn">
                                <li><a class="dropdown-item" asp-controller="Lecturer" asp-action="Dashboard"><i class="bi bi-speedometer2"></i> Dashboard</a></li>
                                <li><a class="dropdown-item" asp-controller="Lecturer" asp-action="SubmitClaim"><i class="bi bi-file-earmark-plus"></i> Submit Claim</a></li>
                                <li><a class="dropdown-item" asp-controller="Lecturer" asp-action="TrackStatus"><i class="bi bi-clipboard-check"></i> Track Status</a></li>
                            </ul>
                        </li>

                        <!-- Coordinator -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="coordDropdown"
                               role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-people"></i> Coordinator
                            </a>
                            <ul class="dropdown-menu shadow-lg rounded-3 animate__animated animate__fadeIn">
                                <li><a class="dropdown-item" asp-controller="Coordinator" asp-action="Dashboard"><i class="bi bi-speedometer"></i> Dashboard</a></li>
                                <li><a class="dropdown-item" asp-controller="Coordinator" asp-action="Approvals"><i class="bi bi-check2-square"></i> Manage Claims</a></li>
                            </ul>
                        </li>

                        <!-- Privacy -->
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy"><i class="bi bi-shield-lock"></i> Privacy</a>
                        </li>
                    </ul>

                    <!-- Login -->
                    <div class="d-flex">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>

        <!-- Decorative Wave -->
        <div class="wave-divider">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 120">
                <path fill="#f5f7fa" fill-opacity="1" d="M0,64L48,58.7C96,53,192,43,288,53.3C384,64,480,96,576,117.3C672,139,768,149,864,144C960,139,1056,117,1152,101.3C1248,85,1344,75,1392,69.3L1440,64L1440,0L0,0Z"></path>
            </svg>
        </div>
    </header>

    <!-- Toast/Alert Messages -->
    <div class="toast-container">
        @if (TempData["Success"] != null)
        {
            <div class="toast align-items-center text-white bg-success border-0 show" role="alert">
                <div class="toast-header bg-success text-white">
                    <strong class="me-auto"><i class="bi bi-check-circle"></i> Success</strong>
                    <button type="button" class="btn-close btn-close-white ms-2 mb-1" data-bs-dismiss="toast"></button>
                </div>
                <div class="toast-body">@TempData["Success"]</div>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="toast align-items-center text-white bg-danger border-0 show" role="alert">
                <div class="toast-header bg-danger text-white">
                    <strong class="me-auto"><i class="bi bi-exclamation-triangle"></i> Error</strong>
                    <button type="button" class="btn-close btn-close-white ms-2 mb-1" data-bs-dismiss="toast"></button>
                </div>
                <div class="toast-body">@TempData["Error"]</div>
            </div>
        }
        @if (TempData["Info"] != null)
        {
            <div class="toast align-items-center text-white bg-info border-0 show" role="alert">
                <div class="toast-header bg-info text-white">
                    <strong class="me-auto"><i class="bi bi-info-circle"></i> Info</strong>
                    <button type="button" class="btn-close btn-close-white ms-2 mb-1" data-bs-dismiss="toast"></button>
                </div>
                <div class="toast-body">@TempData["Info"]</div>
            </div>
        }
    </div>

    <!-- Main Content -->
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer-modern text-center py-4 mt-4">
        <div class="container">
            <p class="mb-1">&copy; 2025 - <strong>Contract Monthly Claim System</strong></p>
            <small class="text-muted">Designed for lecturers and coordinators | Powered by .NET 9 MVC</small>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Auto-hide toasts after 4 seconds
        document.addEventListener('DOMContentLoaded', function () {
            const toastElList = [].slice.call(document.querySelectorAll('.toast'))
            const toastList = toastElList.map(function (toastEl) {
                const t = new bootstrap.Toast(toastEl, { delay: 4000 });
                t.show();
                return t;
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
