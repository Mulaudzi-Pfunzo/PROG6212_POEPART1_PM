@{
    ViewData["Title"] = "CMCS Home";
}

<div class="container py-5">
    <div class="row justify-content-center text-center mb-5">
        <div class="col-lg-8">
            <h1 class="display-4 fw-bold text-dark">Welcome to the Contract Monthly Claim System</h1>
            <p class="lead text-muted mt-3">
                CMCS is your all-in-one solution for managing independent contractor claims. Our system simplifies the process, ensuring accuracy, transparency, and efficiency for both lecturers and administrators.
            </p>
        </div>
    </div>

    <div class="row g-4 text-center">
        <!-- Lecturer Card -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0 rounded-4 p-4">
                <div class="card-body">
                    <i class="bi bi-person-workspace text-primary display-4 mb-3"></i>
                    <h5 class="card-title fw-bold">For Lecturers</h5>
                    <p class="card-text text-muted">
                        Submit your monthly claims and supporting documentation with ease. Track the status of your claims in real-time and ensure a transparent and reliable process from submission to settlement.
                    </p>
                    <a asp-controller="Lecturer" asp-action="SubmitClaim" class="btn btn-primary mt-3">Submit a Claim</a>
                </div>
            </div>
        </div>

        <!-- Coordinator Card -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0 rounded-4 p-4">
                <div class="card-body">
                    <i class="bi bi-people text-success display-4 mb-3"></i>
                    <h5 class="card-title fw-bold">For Coordinators & Managers</h5>
                    <p class="card-text text-muted">
                        Efficiently verify and approve claims with a streamlined, intuitive interface. CMCS provides a clear overview of all pending claims, allowing for quick and accurate processing.
                    </p>
                    <a asp-controller="Coordinator" asp-action="Approvals" class="btn btn-success mt-3">Manage Claims</a>
                </div>
            </div>
        </div>

        <!-- HR Card -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0 rounded-4 p-4">
                <div class="card-body">
                    <i class="bi bi-cash-stack text-warning display-4 mb-3"></i>
                    <h5 class="card-title fw-bold">For HR</h5>
                    <p class="card-text text-muted">
                        Automate claim processing and generate payment reports for lecturers. Manage payment records efficiently with a secure and intuitive interface.
                    </p>
                    <a asp-controller="HR" asp-action="Index" class="btn btn-warning mt-3">Manage Payments</a>
                </div>
            </div>
        </div>
    </div>
</div>
