@model IEnumerable<CMCS.Models.Claim>
@{
    ViewData["Title"] = "Track Claim Status";
}

<div class="container mt-4">
    <h2 class="text-primary fw-bold mb-3">
        <i class="bi bi-clipboard-data"></i> Track Claim Status
    </h2>

    <!-- Feedback Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Claims Table -->
    @if (Model != null && Model.Any())
    {
        <div class="table-responsive shadow-lg rounded-3">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-primary">
                    <tr>
                        <th>Claim ID</th>
                        <th>Date Submitted</th>
                        <th>Hours Worked</th>
                        <th>Hourly Rate (R)</th>
                        <th>Total Amount (R)</th>
                        <th>Status</th>
                        <th>Progress</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model)
                    {
                        string badgeClass = claim.Status switch
                        {
                            "Approved" => "bg-success",
                            "Rejected" => "bg-danger",
                            "Pending" => "bg-warning text-dark",
                            _ => "bg-secondary"
                        };

                        int progress = claim.Status switch
                        {
                            "Pending" => 50,
                            "Approved" => 100,
                            "Rejected" => 100,
                            _ => 25
                        };

                        string progressColor = claim.Status switch
                        {
                            "Approved" => "bg-success",
                            "Rejected" => "bg-danger",
                            "Pending" => "bg-warning",
                            _ => "bg-secondary"
                        };

                        <tr>
                            <td><strong>@claim.ClaimID</strong></td>
                            <td>@claim.ClaimDate.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@claim.HoursWorked</td>
                            <td>@claim.HourlyRate.ToString("0.00")</td>
                            <td class="fw-semibold text-success">R @claim.TotalAmount.ToString("0.00")</td>
                            <td>
                                <span class="badge @badgeClass px-3 py-2">
                                    <i class="bi @(claim.Status == "Approved" ? "bi-check-circle" :
                                                                                         claim.Status == "Rejected" ? "bi-x-circle" :
                                                                                         "bi-hourglass-split")"></i>
                            @claim.Status
                        </span>
                    </td>
                    <td style="min-width: 150px;">
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar @progressColor" role="progressbar"
                                 style="width: @progress%" aria-valuenow="@progress"
                                 aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </td>
                </tr>
                                }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center shadow-sm mt-4">
            <i class="bi bi-info-circle"></i> No claims found.
            <a asp-controller="Lecturer" asp-action="SubmitClaim" class="fw-semibold text-primary">
                Submit a new claim here.
            </a>
        </div>
    }
</div>

<style>
    h2 i {
        margin-right: 6px;
    }

    table th {
        font-weight: 600;
        white-space: nowrap;
    }

    .table-hover tbody tr:hover {
        background-color: #f5f9ff;
        transition: background-color 0.2s ease-in-out;
    }

    .progress {
        background-color: #e9ecef;
        border-radius: 20px;
    }

    .progress-bar {
        transition: width 0.5s ease;
    }
</style>
