@model CMCS.Models.Claim
@{
    ViewData["Title"] = "Submit Claim";
}

<div class="container mt-4">
    <h2 class="text-primary fw-bold mb-3">Submit a New Claim</h2>

    <!-- Success and Error Alerts -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @ViewBag.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Claim Submission Form -->
    <form asp-action="SubmitClaim" enctype="multipart/form-data" method="post" class="shadow p-4 rounded bg-light border-0">

        <!-- Lecturer Selection (for testing until login is added) -->
        <div class="mb-3">
            <label asp-for="LecturerID" class="form-label fw-semibold">Select Lecturer</label>
            <select asp-for="LecturerID" class="form-select" required>
                <option value="">-- Select Lecturer --</option>
                <option value="1">Dr. John Smith</option>
                <option value="2">Prof. Aisha Naidoo</option>
                <option value="3">Dr. Michael Khumalo</option>
            </select>
            <span asp-validation-for="LecturerID" class="text-danger"></span>
        </div>

        <!-- Hours Worked -->
        <div class="mb-3">
            <label asp-for="HoursWorked" class="form-label fw-semibold">Hours Worked</label>
            <input asp-for="HoursWorked" type="number" step="0.5" class="form-control" placeholder="e.g. 20" required />
            <span asp-validation-for="HoursWorked" class="text-danger"></span>
        </div>

        <!-- Hourly Rate -->
        <div class="mb-3">
            <label asp-for="HourlyRate" class="form-label fw-semibold">Hourly Rate (R)</label>
            <input asp-for="HourlyRate" type="number" step="0.01" class="form-control" placeholder="e.g. 350.00" required />
            <span asp-validation-for="HourlyRate" class="text-danger"></span>
        </div>

        <!-- Supporting Document -->
        <div class="mb-3">
            <label class="form-label fw-semibold">Supporting Document (Optional)</label>
            <input type="file" name="file" class="form-control" accept=".pdf,.jpg,.png,.docx" />
            <div class="form-text">Upload relevant proof such as attendance registers, timetables, or schedules.</div>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary w-100 fw-semibold mt-3">
            <i class="bi bi-cloud-upload"></i> Submit Claim
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .form-control:focus, .form-select:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.2rem rgba(13,110,253,.25);
    }

    .alert {
        font-size: 0.95rem;
    }
</style>
