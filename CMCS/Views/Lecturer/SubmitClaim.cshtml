@{
    ViewData["Title"] = "Submit Claim";
}

<div class="container mt-4">
    <h2 class="text-primary fw-bold mb-3">Submit a New Claim</h2>

    <form>
        <div class="mb-3">
            <label class="form-label">Hours Worked</label>
            <input type="number" class="form-control" placeholder="e.g. 20" disabled />
        </div>
        <div class="mb-3">
            <label class="form-label">Hourly Rate</label>
            <input type="text" class="form-control" placeholder="e.g. R350" disabled />
        </div>
        <div class="mb-3">
            <label class="form-label">Date</label>
            <input type="date" class="form-control" disabled />
        </div>
        <button type="submit" class="btn btn-primary" disabled>Submit (Prototype)</button>
    </form>
</div>

