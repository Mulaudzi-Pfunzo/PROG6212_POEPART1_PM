@{
    ViewData["Title"] = "Manage Approvals";
}

<div class="container mt-4">
    <h2 class="text-primary fw-bold mb-3">Manage Lecturer Claims</h2>

    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-primary">
            <tr>
                <th>Claim ID</th>
                <th>Lecturer</th>
                <th>Date Submitted</th>
                <th>Hours</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>CLM001</td>
                <td>Dr. Smith</td>
                <td>2025-09-10</td>
                <td>20</td>
                <td>R7000</td>
                <td><span class="badge bg-warning text-dark">Pending</span></td>
                <td>
                    <button class="btn btn-success btn-sm me-2" disabled>Approve</button>
                    <button class="btn btn-danger btn-sm" disabled>Reject</button>
                </td>
            </tr>
            <tr>
                <td>CLM002</td>
                <td>Prof. Naidoo</td>
                <td>2025-08-05</td>
                <td>15</td>
                <td>R5250</td>
                <td><span class="badge bg-success">Approved</span></td>
                <td>
                    <button class="btn btn-secondary btn-sm" disabled>Reviewed</button>
                </td>
            </tr>
        </tbody>
    </table>
</div>
