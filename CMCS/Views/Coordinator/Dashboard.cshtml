@{
    ViewData["Title"] = "Coordinator Dashboard";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary fw-bold">Coordinator Dashboard</h2>

    <div class="row g-4">
        <!-- Pending Claims -->
        <div class="col-md-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-hourglass-split display-4 text-warning"></i>
                    <h5 class="card-title mt-3">Pending Claims</h5>
                    <p class="card-text">View and manage claims awaiting review.</p>
                    <a class="btn btn-warning text-dark" asp-controller="Coordinator" asp-action="Approvals">Go</a>
                </div>
            </div>
        </div>

        <!-- Approved Claims -->
        <div class="col-md-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-check-circle display-4 text-success"></i>
                    <h5 class="card-title mt-3">Approved Claims</h5>
                    <p class="card-text">Keep track of lecturer claims that have been approved.</p>
                    <a class="btn btn-success" asp-controller="Coordinator" asp-action="Approvals">Go</a>
                </div>
            </div>
        </div>
    </div>
</div>
